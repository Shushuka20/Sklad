
@{
    ViewBag.Title = "ContinuationAddClaim";
    Layout = "~/Views/Shared/_LayoutManager.cshtml";
}

<div class="head">
    <h3>Реализация</h3>
</div>
<form role="form" method="post" action="/Manager/ContinuationAddClaim/@Model.Id">
    
    <div class="col-xs-5" style="margin-bottom: 80px">
        <div class="form-group">
            <label for="buyer">Клиент</label>
            <input type="text" id="buyer" name="client" class="input db1" value="@Model.Client" />
        </div>
        <div class="form-group">
            <label for="address">Адрес</label>
            <input type="text" id="address" name="address" class="input db1" />
        </div>
        <div class="form-group">
            <label for="text">Текст</label>
            <input type="text" id="text" name="text" class="input db1" />
        </div>
        <div class="form-group">
            <label for="comment">Комментарий</label>
            <textarea id="comment" name="Comment" class="input db1"></textarea>
        </div>
        <button type="submit" class="btn btn-success" id="but_sub">Продолжить</button>
    </div>

</form>

