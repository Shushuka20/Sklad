
@{
    ViewBag.Title = "ShipmentConfirm";
    Layout = "~/Views/Shared/_LayoutProduction.cshtml";
}

<div class="head">
    <h3>Подтверждение реализации</h3>
</div>
<div class="col-xs-4">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Список продукции</th>
                <th>Количество</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var g in Model.GreenhouseForSales)
            {
                <tr>
                    <td>@g.Name</td>
                    <td>@g.Amount</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="col-xs-8">
    <table class="table table-bordered">
        <tbody>
            <tr>
                <td>Сумма без скидки:</td>
                <td>@Model.SumWithoutD</td>
            </tr>
            <tr>
                <td>Скидка:</td>
                <td>@Model.Discount</td>
            </tr>
            <tr>
                <td>Итого:</td>
                <td>@Model.SumWithD </td>
            </tr>
            <tr>
                <td>Внесено денег:</td>
                <td>@Model.AddMoney</td>
            </tr>
            <tr>
                <td>Отгрузка:</td>
                <td>
                    @if (Model.Shipment == true)
                    {
                        <span>Да</span>
                    }
                    else
                    {
                        <span>Нет</span>
                    }
                </td>
            </tr>
            <tr>
                <td>Оплата через терминал:</td>
                <td>
                    @if (Model.PayForTerminal == true)
                    {
                        <span>Да</span>
                    }
                    else
                    {
                        <span>Нет</span>
                    }
                </td>
            </tr>
        </tbody>
    </table>
</div>
<form method="post" action="/Production/ShipmentConfirmM/@Model.Id">
    <button type="submit" class="btn btn-default">Подтвердить</button>
</form>



