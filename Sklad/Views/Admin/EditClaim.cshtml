@using Sklad.Services

@{
    ViewBag.Title = "EditClaim";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    ClaimService claimService = new ClaimService();
}

<form role="form" method="post" action="/Admin/EditClaim">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="form-group">
        <label for="text">Текст</label>
        <input type="text" id="text" name="Text" value="@claimService.ReadProperty(Model.Text)" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Comment">Комментарий</label>
        <textarea id="Comment" name="Comment" class="form-control">@claimService.ReadProperty(Model.Comment)</textarea>
    </div>
    <div class="form-group">
        <label for="Status">Статус</label>
        <select id="Status" name="Status" class="form-control">
            <option value="В работе">В работе</option>
            <option value="Готово">Готово</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Подтвердить</button>
</form>

