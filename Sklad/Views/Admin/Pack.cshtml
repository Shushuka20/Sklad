
@{
    ViewBag.Title = "Pack";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<form role="form" method="post" action="/Admin/Pack/@Model.Id">
    <div class="form-group">
        <label for="name">Наименование</label>
        <input type="text" id="name" name="name" value="@Model.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label for="group">Группа</label>
        <input type="text" id="group" name="group" value="@Model.Group" class="form-control" />
    </div>
    <div class="form-group">
        <label for="amount">Количество на складе</label>
        <input type="text" id="amount" name="amount" value="@Model.Amount" class="form-control" />
    </div>
    <div class="form-group">
        <label for="cost">Стоимость за единицу</label>
        <input type="text" id="cost" name="cost" value="@Model.Cost" class="form-control" />
    </div>
    <div class="form-group">
        <label for="costMin">Минимальное количество</label>
        <input type="text" id="costMin" name="costMin" value="@Model.CostMin" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Принять</button>
    <a href="/Admin/PackDelete/@Model.Id" class="btn btn-danger">Удалить</a>
</form>

