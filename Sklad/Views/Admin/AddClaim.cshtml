
@{
    ViewBag.Title = "AddClaim";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="col-md-12" style="font-size:21px; text-align:center; margin-top:30px" id="group">

    @foreach (var c in ViewBag.Categories)
    {
        <div class="dropdown line_real" id="gr1" style="margin-right:20px;">
            <a data-toggle="dropdown" href="" style="color:#000; text-decoration:none" class="btn btn-default">@c.Name</a>
            <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel" style="width:300px">
                @foreach (var g in c.Greenhouses)
                {
                    <li style="cursor:pointer"><h4>@g.Name</h4></li>
                }
            </ul>
        </div>
    }
</div>
<div class="col-md-12" style="margin-top:50px">
    <form role="form" method="post" action="/Admin/AddClaim/@Model.Id">

        <div class="form-group">
            <label for="Group1">Выбор товара</label>
            <div id="greenhouses">
                @if (ViewBag.ListForRealization != null)
                {
                    string[] s = ViewBag.ListForRealization.Split(',');
                    for (var k = 0; k < s.Length - 1; k++)
                    {
                        string[] ss = s[k].Split(':');

                        <div class="line_real" style="margin-right:10px">
                            <div>
                                <label for="ghname">Название</label>
                                <input type="text" id="ghname0" name="ghName[@k]" class="input db" value="@ss[0]" />
                            </div>
                            <div>
                                <label for="ghamount">Количество</label>
                                <input type="text" id="ghamount" name="ghAmount[@k]" class="input db" value="@ss[1]" /><br />
                            </div>
                        </div>
                        <script>kk = @k;</script>
                    }
                }
                else
                {
                    <div class="line_real" style="margin-right:10px">
                        <div>
                            <label for="ghname">Название</label>
                            <input type="text" id="ghname0" name="ghName[0]" class="input db" />
                        </div>
                        <div>
                            <label for="ghamount">Количество</label>
                            <input type="text" id="ghamount" name="ghAmount[0]" class="input db" /><br />
                        </div>
                    </div>
                }

            </div>
            <div id="add" class="btn btn-default">Добавить поле для ввода товара</div>
        </div><br /><br />
        <button type="submit" class="btn btn-success">Продолжить</button>
    </form>
</div>

