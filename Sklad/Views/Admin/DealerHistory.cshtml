
@{
    ViewBag.Title = "DealerHistory";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="head">
    <h3>Список операций</h3>
</div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Дата</th>
            <th>Сумма</th>
            <th>Кто произвёл операцию</th>
            <th>Действие</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var h in Model)
        {
            <tr>
                <td>@h.Date</td>
                <td>@h.Cost</td>
                <td>@h.Who</td>
                <td><a href="/Admin/DealerHistoryDelete/@h.Id" class="btn btn-danger">Удалить</a></td>
            </tr>
        }
    </tbody>
</table> 
