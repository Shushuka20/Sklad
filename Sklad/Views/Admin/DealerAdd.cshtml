
@{
    ViewBag.Title = "DealerAdd";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<form role="form" method="post" action="/Admin/DealerAdd">
    <div class="form-group">
        <label for="name">Название</label>
        <input type="text" id="name" name="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label for="phone">Телефон</label>
        <input type="text" id="phone" name="Phone" class="form-control" />
    </div>
    <div class="form-group">
        <label for="address">Адрес</label>
        <input type="text" id="address" name="Address" class="form-control" />
    </div>
    <div class="form-group">
        <label for="costRecommend">Рекомендуемая цена</label>
        <textarea id="costRecommend" name="CostRecommend" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label for="debt">Задолженность</label>
        <input type="text" id="debt" name="Debt" class="form-control" />
    </div>
    <div class="form-group">
        <label for="enabledForSale">Разрешение на продажу</label>
        <select id="enabledForSale" name="EnabledForSale" class="form-control">
            <option value="true">Есть</option>
            <option value="false">Нет</option>
        </select>
    </div>
    <button type="submit" class="btn btn-success">Подтвердить</button>
</form>

