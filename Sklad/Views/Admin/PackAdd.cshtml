
@{
    ViewBag.Title = "PackAdd";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<form role="form" method="post" action="/Admin/PackAdd/@Model.Id">
    <div class="form-group">
        <label for="name">Наименование</label>
        <input type="text" id="name" name="name" class="form-control" />
    </div>
    <div class="form-group">
        <label for="group">Группа</label>
        <input type="text" id="group" name="group" class="form-control" />
    </div>
    <div class="form-group">
        <label for="amount">Количество на складе</label>
        <input type="text" id="amount" name="amount" class="form-control" />
    </div>
    <div class="form-group">
        <label for="cost">Стоимость за единицу</label>
        <input type="text" id="cost" name="cost" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Подтвердить</button>
</form>

