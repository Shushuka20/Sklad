
@{
    ViewBag.Title = "StockAdd";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<form role="form" method="post" action="/Admin/StockAdd">
    <div class="form-group">
        <label for="name">Название</label>
        <input type="text" id="name" name="name" class="form-control" />
    </div>
    <div class="form-group">
        <label for="pref">Префикс</label>
        <input type="text" id="pref" name="pref" class="form-control"/>
    </div>
    <div class="form-group">
        <label for="col">Цвет фона</label>
        <input type="text" id="col" name="color" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success">Принять</button>
</form>

